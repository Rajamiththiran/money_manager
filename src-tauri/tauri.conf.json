{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri-schema/main/schema.json",
  "productName": "Money Manager",
  "version": "1.0.1",
  "identifier": "com.miththiran.money-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Money Manager",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "Â© 2025 Miththiran. All rights reserved.",
    "category": "Finance",
    "shortDescription": "Personal finance and money tracking application",
    "longDescription": "A comprehensive personal finance manager with double-entry accounting, budgeting, credit card tracking, recurring transactions, and detailed analytics.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "languages": ["English"],
        "headerImage": null,
        "sidebarImage": null
      }
    }
  }
}
